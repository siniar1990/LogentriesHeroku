<% if @message_if_not_booked %>


    <!-- FOR DESKTOPS -->
    <% if !mobile_device? %>
        <h3 style="text-align: center">Reservation Summary</h3>

        <table class="table table-bordered">
          <th>From</th>
          <th>To</th>
          <th>Date</th>
          <th>Time</th>

          <tr>
            <td><%= @origin %> </td>
            <td><%= @destination %></td>
            <td><%= @date %></td>
            <td><%= @time %></td>
          </tr>
        </table>

        <!-- FOR MOBILES -->
    <% else %>
        <h3 style="text-align: center">Reservation Summary</h3>

        <table class="table table-bordered" id="mobile-table-full-margins">
