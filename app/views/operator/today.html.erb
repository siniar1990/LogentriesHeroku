<% if admin %>

    <% if !mobile_device? %>

        <div class="col-md-12">
          <a  class="btn btn-primary" href="/display_reservations" role="button">Back</a>
          </br>


          <h3>Reservations for today</h3>
          <table class="table table-striped table-hover"  >
            <th>From</th>
            <th>To</th>
            <th>Date</th>
            <th>Time</th>
            <th>User</th>

            <% @todayReservations.each do  |reservation| %>

                <tr>

                  <td> <b><%= reservation.origin %></b><br> </td>
                  <td> <b><%= reservation.destination %></b><br> </td>
                  <td> <b><%= reservation.date %></b><br> </td>
                  <td> <b><%= reservation.time %></b><br> </td>
                  <td> <b><%= reservation.user %></b><br> </td>

                </tr>

            <% end %>

          </table>


        </div>


    <% else %>
        <a  class="btn btn-primary" href="/display_reservations" role="button">Back</a>
        <h5>Reservations for today</h5>
        <table class="table table-condensed" id="mobile-table-full-margins" style="word-wrap: normal">

          <th>From</th>
          <th>To</th>
          <th>Date</th>
          <th>Time</th>
          <th>User</th>

          <% @todayReservations.each do  |reservation| %>

              <tr>

                <td> <b><%= reservation.origin %></b><br> </td>
                <td> <b><%= reservation.destination %></b><br> </td>
                <td> <b><%= reservation.date %></b><br> </td>
                <td> <b><%= reservation.time %></b><br> </td>
                <td> <b><%= reservation.user %></b><br> </td>

              </tr>

          <% end %>

        </table>

    <% end %>



<% else %>

    <% flash[:error] = "You need administrator account to view this page" %>



<% end %>